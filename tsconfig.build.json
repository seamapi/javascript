{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "./"
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts", "tsup.config.ts"]
}
